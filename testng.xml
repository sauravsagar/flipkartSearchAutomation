<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Flipkart Search Automation Suite" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="com.flipkart.listeners.ExtentReportListener"/>
        <listener class-name="com.flipkart.listeners.TestListener"/>
    </listeners>

    <test name="Flipkart Search Tests - Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.flipkart.tests.SearchTest"/>
        </classes>
    </test>
</suite>
